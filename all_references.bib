doi = {10.1007/s10236-012-0556-2},
file = {:Users/msitech/Library/Application Support/Mendeley Desktop/Downloaded/Kuang, Blumberg, Georgas - 2012 - Assessing the fidelity of surface currents from a coastal ocean model and HF radar using drifting buoy.pdf:pdf},
issn = {16167341},
journal = {Ocean Dynamics},
keywords = {Coastal circulation model,Drifter,Drifter-derived currents,GNOME,HF radar,Model skill,Model validation,NYHOPS,Particle tracking},
number = {8},
pages = {1229--1243},
title = {{Assessing the fidelity of surface currents from a coastal ocean model and HF radar using drifting buoys in the Middle Atlantic Bight}},
volume = {62},
year = {2012}
}
