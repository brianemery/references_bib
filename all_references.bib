issn = {1053587X},
journal = {IEEE Transactions on Signal Processing},
keywords = {2q-MUSIC,Direction finding,Higher order,MUSIC,Modeling errors,Resolution,Underdetermined mixtures,Virtual array},
number = {8},
pages = {2986--2997},
title = {{High-resolution direction finding from higher order statistics: The 2q-MUSIC algorithm}},
volume = {54},
year = {2006}
}
