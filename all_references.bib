journal = {Journal of Geophysical Research C: Oceans},
keywords = {Filtering,Interpolation,Modal analysis},
number = {12},
pages = {1--13},
title = {{Open-boundary modal analysis: Interpolation, extrapolation, and filtering}},
volume = {109},
year = {2004}
